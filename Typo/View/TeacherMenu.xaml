<UserControl x:Class="Typo.View.TeacherMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Typo.View"
             mc:Ignorable="d"
             FontSize="25"
             d:DesignHeight="620" d:DesignWidth="1280">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="90*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Content="Manage Courses" Width="350" Height="350" Grid.Column="0" Click="Manage_Courses_Click" />
                <Button Content="Student overview" Width="350" Height="350" Grid.Column="2"
                        Click="Student_Overview_Click" />
            </Grid>
            <Grid Grid.Row="1" Margin="-10,-10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="75*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Quit" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Width="290" Grid.Row="1" Click="Quit_Click" />
            </Grid>

        </Grid>


    </Grid>
</UserControl>