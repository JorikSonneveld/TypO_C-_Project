<UserControl x:Class="Typo.View.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Typo.View"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <!-- Buttons -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Image Height="300" Width="300"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Content="Word Exercise" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Start_WordExercise_Click" Height="54" Width="365"/>
            <Button Content="Letter Exercise" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Start_CharacterExercise_Click" Height="54" Width="365"/>
            <Button Content="Number Exercise" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Start_NumberExercise_Click" Height="54" Width="365"/>
            <Button Content="Course" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Start_Course_Click" Height="54" Width="365"/>
            <Button Content="Settings" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Settings_Click" Height="54" Width="365"/>
            <Button Content="Quit" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Quit_Click" Height="54" Width="365"/>
        </StackPanel>
    </Grid>
</UserControl>
