<UserControl x:Class="Typo.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Typo.View"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="620"
             d:DesignWidth="1280"
             FontSize="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" VerticalAlignment="Top">
            <Label Content="Text Color" />
            <xctk:ColorPicker x:Name="TextColor" HorizontalAlignment="Left" RenderTransformOrigin="0.059,0.375"
                              Width="100" SelectedColorChanged="ChangeColor" />

            <Label Content="Correct Key Color" />
            <xctk:ColorPicker x:Name="CorrectColor" HorizontalAlignment="Left" RenderTransformOrigin="0.059,0.375"
                              Width="100" SelectedColorChanged="ChangeColor" />
            <Label Content="False Key Color" />
            <xctk:ColorPicker x:Name="FalseColor" HorizontalAlignment="Left" RenderTransformOrigin="0.059,0.375"
                              Width="100" SelectedColorChanged="ChangeColor" />
            <Label Content="Numpad Check" />
            <CheckBox x:Name="NumPadCheck" Width="100" HorizontalAlignment="Left" Height="30px" />
        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
            <Button Content="Back" Click="Back_Click" Height="30px" />
        </StackPanel>

    </Grid>
</UserControl>