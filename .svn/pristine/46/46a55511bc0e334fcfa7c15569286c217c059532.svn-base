<UserControl x:Class="Typo.View.StudentInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Typo.View"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid Margin="3">
        <Button Name="BtnStudent" Click="BtnStudent_Click">
            <Grid Name="StudentGrid" Background="#FFAEAEAE" MinHeight="300" MinWidth="300" MaxHeight="300"
                  MaxWidth="300">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label Content="First name" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Label Content="Last name" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" />
                <Label Content="Student ID" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" />
                <Label Name="FirstName" HorizontalAlignment="Center" Grid.Column="1" VerticalAlignment="Center" />
                <Label Name="Surname" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1"
                       VerticalAlignment="Center" />
                <Label Name="StudentID" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="2"
                       VerticalAlignment="Center" />
            </Grid>
        </Button>
    </Grid>
</UserControl>