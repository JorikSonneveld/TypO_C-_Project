<UserControl x:Class="Typo.View.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Typo.View"
             mc:Ignorable="d" 
             d:DesignHeight="720" 
             d:DesignWidth="1280" 
             FontSize="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" VerticalAlignment="Top">
            <Label Content="Text Color" />
            <Button x:Name="TextColor" Width="100" HorizontalAlignment="Left" Height="30px" Click="TextColor_Click" />

            <Label Content="Colorblind Off Color" />
            <Button x:Name="ColorblindOffTrue" Width="100" HorizontalAlignment="Left" Height="30px"  />
            <Button x:Name="ColorblindOffFalse" Width="100" HorizontalAlignment="Right" Height="30px" />


            <Label Content="Colorblind On Color" />
            <Button x:Name="ColorblindOnTrue" Width="100" HorizontalAlignment="Left" Height="30px" />
            <Button x:Name="ColorblindOnFalse" Width="100" HorizontalAlignment="Left" Height="30px"  />

        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Bottom" >
            <Button Content="Back" Click="Back_Click" Height="30px" />
            <Button Content="Back" Click="Back_Click" Height="30px" />
            <Button Content="Back" Click="Back_Click" Height="30px" />
        </StackPanel>
        
    </Grid>
</UserControl>
