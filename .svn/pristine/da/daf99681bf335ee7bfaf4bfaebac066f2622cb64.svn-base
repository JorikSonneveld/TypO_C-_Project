<UserControl x:Class="Typo.View.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Typo.View"
             mc:Ignorable="d"
             d:DesignHeight="620" d:DesignWidth="1280">
    <Grid>
        <!-- Buttons -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Name="MenuStatisticsGrid" Grid.Column="0" />
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Content="Word Exercise" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Click="Start_WordExercise_Click" Height="50" Width="340" Grid.Row="0" />
            <Button Content="Personal Word Exercise" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Click="Start_GeneratedExercise_Click" Height="50" Width="340" Grid.Row="1" />
            <Button Content="Character Exercise" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Click="Start_CharacterExercise_Click" Height="50" Width="340" Grid.Row="2" />
            <Button Content="Number Exercise" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Click="Start_NumberExercise_Click" Height="50" Width="340" Grid.Row="3" />
            <Button Content="Practices" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Click="Practice_Courses_Click" Height="50" Width="340" Grid.Row="4" />
            <Button Content="Multiplayer" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Click="Multiplayer_Click" Height="50" Width="340" Grid.Row="5" />
            <Button Content="How do I type?" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Click="Explanation_Click" Height="50" Width="340" Grid.Row="6" />
            <Button Content="Settings" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Settings_Click"
                    Height="50" Width="340" Grid.Row="7" />
            <Button Content="Quit" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Quit_Click"
                    Height="50" Width="340" Grid.Row="8" />
        </Grid>
    </Grid>
</UserControl>